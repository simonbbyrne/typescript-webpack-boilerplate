{
  "name": "typescript-webpack-boilerplate",
  "version": "1.0.0",
  "description": "A minimum typescript and webpack boilerplate",
  "main": "main.ts",
  "scripts": {
    "start": "webpack --config webpack.config.js && webpack-dev-server",
    "build:webpack": "NODE_ENV=production webpack --config webpack.prod.config.js",
    "build": "npm run clean && npm run build:webpack",
    "clean": "rimraf build",
    "test": "karma start"
  },
  "author": "Simon Berry-Byrne",
  "license": "ISC",
  "devDependencies": {
    "@types/jasmine": "^2.5.38",
    "istanbul-instrumenter-loader": "^1.0.0",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-spec-reporter": "0.0.26",
    "karma-typescript": "^2.1.3",
    "karma-webpack": "^1.8.0",
    "rimraf": "^2.5.4",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "ts-loader": "^1.2.2",
    "typescript": "^2.0.10"
  }
}
